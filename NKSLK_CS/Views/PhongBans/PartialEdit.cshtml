@model NKSLK_CS.PhongBan

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Chỉnh sửa
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm("Edit", "PhongBans"))
                        {
                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">ID</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.id" name="ID" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">Ten</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.ten" name="Ten" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                         }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
