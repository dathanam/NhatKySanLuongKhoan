@model IEnumerable<NKSLK_CS.PhongBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="heading_btn">
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#myModalNew">New</button>
            </div>
            <h3 class="heading_title">Danh Sách Phòng Ban</h3>
        </div>
        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ten)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ten)
                            </td>

                            <td>
                                <button type="button" class="fa fa-wrench" data-toggle="modal" data-target="#myModalEdit" ></button>
                                @*  <i class="fa fa-wrench" data-toggle="modal" data-target="#myModalEdit"></i> *@
                                @* <i class="fa fa-trash" data-toggle="modal" data-target="#myModal"></i> *@
                                <button type="button" class="fa fa-trash" data-toggle="modal" data-target="#myModal"></button>
                            </td>
                        </tr>
                    }
                </table>
            </table>
        </div>
    </div>
</div>

<div id="myModalNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Thêm mới Phòng Ban
                            </header>
                            <div class="panel-body">
                                <form role="form" class="form-horizontal" method="post" action="/PhongBans/Create">

                                    @Html.AntiForgeryToken()
                                   

                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">Tên</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="ten" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button type="submit" class="btn btn-success">Thêm</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Chỉnh sửa
                            </header>
                            <div class="panel-body">
                                <form role="form" class="form-horizontal " method="post" action="/PhongBans/Edit/">

                                    @Html.AntiForgeryToken();


                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">ID</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="id" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">Tên</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="ten" class="form-control" required />
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button type="submit" class="btn btn-success">Cập Nhật</button>

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
