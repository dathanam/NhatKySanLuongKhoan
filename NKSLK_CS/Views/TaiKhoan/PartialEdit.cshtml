@model NKSLK_CS.TaiKhoan

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Chỉnh sửa
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm("Edit", "TaiKhoan"))
                        {
                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">ID</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.id" name="ID" />
                                </div>
                            </div>

                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">Tên Đăng Nhập</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.tendangnhap" name="tendangnhap" />
                                </div>
                            </div>

                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">Mật Khẩu</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.matkhau" name="matkhau" />
                                </div>
                            </div>

                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">id_cong_nhan</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.id_cong_nhan" name="id_cong_nhan" />
                                </div>
                            </div>

                            <div class="form-group has-success">
                                <label class="col-lg-3 control-label">id_nhom</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.id_nhom" name="id_nhom" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
