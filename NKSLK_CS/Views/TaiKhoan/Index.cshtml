

@model IEnumerable<NKSLK_CS.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="heading_btn">
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#myModalNew">New</button>
            </div>
            <h3 class="heading_title">Tài Khoản</h3>

            <div class="col-md-4">


            </div>



        </div>
        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tendangnhap)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.matkhau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.id_cong_nhan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.id_nhom)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tendangnhap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.matkhau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_cong_nhan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_nhom)
                    </td>
                    <td>
                        <a href="/TaiKhoan/Edit/@item.id" class="btn-edit"><i class="fa fa-wrench"></i></a>
                        <a href="/TaiKhoan/Delete/@item.id" class="btn-delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                    }
                </table>
            </table>
        </div>
    </div>
</div>

<div id="myModalNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Thêm mới Tài Khoản
                            </header>
                            <div class="panel-body">
                                <form role="form" class="form-horizontal" method="post" action="/TaiKhoan/Create">

                                    @Html.AntiForgeryToken()


                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">Tên Đăng Nhập</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="tendangnhap" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">Mật Khẩu</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="matkhau" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">id_cong_nhan</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="id_cong_nhan" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group has-success">
                                        <label class="col-lg-3 control-label">ID_nhóm</label>
                                        <div class="col-lg-6">
                                            <input type="text" placeholder="" name="id_nhom" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button type="submit" class="btn btn-success">Thêm</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="myModalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        @*partialView*@
    </div>
</div>

<div id="myModalDelete" class="modal fade" role="dialog">
    <div class="modal-dialog" style="width: 25%">
        @*partialView*@
    </div>
</div>


<script>
    $(document).ready(function () {

        $('.btn-edit').click(function (e) {

            e.preventDefault();

            var $modal = $('#myModalEdit');
            var $modalDialog = $('.modal-dialog');
            var href = $(this).prop('href');

            // không cho phép tắt modal khi click bên ngoài modal
            var option = { backdrop: 'static' };

            // load modal
            $modalDialog.load(href, function () {
                $modal.modal(option, 'show');
            });
        });

    });
</script>

<script>
    $(document).ready(function () {

        $('.btn-delete').click(function (e) {

            e.preventDefault();

            var $modal = $('#myModalDelete');
            var $modalDialog = $('.modal-dialog');
            var href = $(this).prop('href');

            // không cho phép tắt modal khi click bên ngoài modal
            var option = { backdrop: 'static' };

            // load modal
            $modalDialog.load(href, function () {
                $modal.modal(option, 'show');
            });
        });

    });
</script>