@model NKSLK_CS.DanhMucCongViec

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Chỉnh sửa
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm("Edit", "DanhMucCongViecs"))
                        {
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Tên</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.ten" name="ten" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Định mức khoán</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.dinh_muc_khoan" name="dinh_muc_khoan" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Đơn vị khoán</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.don_vi_khoan" name="don_vi_khoan" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Hệ số khoán</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.he_so_khoan" name="he_so_khoan" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Định mức lao động</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.dinh_muc_lao_dong" name="dinh_muc_lao_dong" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                         }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
