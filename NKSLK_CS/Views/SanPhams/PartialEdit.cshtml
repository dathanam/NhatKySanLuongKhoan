@model NKSLK_CS.SanPham

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Chỉnh sửa
                    </header>
                    <div class="panel-body">
                        @using (Html.BeginForm("Edit", "SanPhams"))
                        {
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Họ tên</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.ten" name="ten" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Số đăng ký</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.so_dang_ky" name="so_dang_ky" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Ngày đăng ký</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.ngay_dang_ky.ToShortDateString()" name="ngay_dang_ky" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Ngày sản xuất</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.ngay_san_xuat.ToShortDateString()" name="ngay_san_xuat" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Hạn sử dụng</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.han_su_dung.ToShortDateString()" name="han_su_dung" />
                                </div>
                            </div>
                            <div class="form-group has-success">
                                <label class="col-lg-5 control-label">Quy cách</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.quy_cach" name="quy_cach" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
