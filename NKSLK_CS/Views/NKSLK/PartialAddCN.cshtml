@{
    var idCV = ViewBag.idCV;
    var idSLK = ViewBag.idSLK;
    var congNhan = (List<NKSLK_CS.CongNhan>)ViewBag.congNhan;
}

<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Thêm công nhân vào NKSLK
                    </header>
                    <div class="panel-body">
                        <form role="form" class="form-horizontal" method="post" action="/NKSLK/AddCN">
                            @Html.AntiForgeryToken()
                            <div class="form-group has-success">
                                <input type="hidden" name="idCV" value=@idCV />
                                <input type="hidden" name="idSLK" value=@idSLK />
                                <label class="col-lg-3 control-label">Công Nhân</label>
                                <div class="col-lg-6">
                                    <select class="w3-select w3-border" name="idCongNhan">
                                        <option value="" disabled selected>Choose your option</option>
                                        @foreach (var item in congNhan)
                                        {
                                            <option value=@item.id>@item.ten</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button type="submit" class="btn btn-success">Thêm</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
